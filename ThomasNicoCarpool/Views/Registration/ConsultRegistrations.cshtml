@model List<Registration>
<a class="btn" style="border: 2px solid grey" asp-controller="Carpool" asp-action="SeeAllOffers">Return</a>
<br/>
<br/>
<table class="table">
    <tr>
        <th>Date</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th>Driver's number'</th>
        <th>Place taken</th>
        <th>Number of luggage</th>
        <th>Price/Person</th>

    </tr>
    @foreach (Registration r in Model)
    {
            <tr>
                <td>@r.Carpool_.Date</td>
                <td>@r.Carpool_.Departure</td>
                <td>@r.Carpool_.Arrival</td>
                <td>@r.Carpool_.Driver.Telephone</td>
                <td>@r.NbrPlaceTaken</td>
                <td>@r.NbrLuggage</td>
                <td>@r.Carpool_.CalculatePrice()</td>
                <td><a asp-controller="Review" asp-action="GiveAReview" asp-route-id="@r.Id">Give a review</a></td>
            </tr>
    }
</table>
