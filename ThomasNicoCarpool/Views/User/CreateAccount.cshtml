@model ThomasNicoCarpool.ViewModels.UserViewModel

<h1>Create an account</h1>
<form method="post" asp-controller="User" asp-action="CreateAccount">
    <table>
        <tr>
            <td><label asp-for="Firstname"></label></td>
            <td><input asp-for="Firstname"></td>
            <td><span asp-validation-for="Firstname" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Lastname"></label></td>
            <td><input asp-for="Lastname"></td>
            <td><span asp-validation-for="Lastname"class="text-danger"></span></td>

        </tr>
        <tr>
            <td><label asp-for="Nickname"></label></td>
            <td><input asp-for="Nickname"></td>
            <td><span asp-validation-for="Nickname"class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Email"></label></td>
            <td><input asp-for="Email"></td>
            <td><span asp-validation-for="Email"class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td><input asp-for="Password"></td>
            <td><span asp-validation-for="Password"class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Telephone"></label></td>
            <td><input asp-for="Telephone"></td>
            <td><span asp-validation-for="Telephone"class="text-danger"></span></td>
        </tr>

        <tr>
            <td><a asp-controller="Home" asp-action="Index">Cancel</a></td>
            <td><input type="submit" value="Register" /></td>
        </tr>
    </table>
</form>